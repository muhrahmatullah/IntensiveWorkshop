<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="com.rahmat.app.intensiveworkshop.DetailMakananActivity">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:id="@+id/img_detail"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ayam_bakar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Soto Ayam Madura Timur"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/title_detail"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_detail"
        android:textColor="#000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp. 10.000"
        android:layout_centerHorizontal="true"
        android:id="@+id/price_detail"
        android:layout_below="@id/title_detail"
        android:textSize="16sp" />


</RelativeLayout>
